@import './color.styl'

$bg = $blue

*
  animation fadeIn .5s
  box-sizing border-box
  transition transform .5s ease 0s

body
  background-color $bg
  color #aaa
  margin 0
  padding 0

header
  margin 0
  padding 20px

  h1
    font-size 2.5rem

button
a
  cursor pointer

footer
  padding 30px
  text-align center

a
  text-decoration none

  $bg = $groovy-red


img
  border-radius 50px
  height        300px
  object-fit     cover
  width         300px

@keyframes fadeIn
  from
    opacity 0